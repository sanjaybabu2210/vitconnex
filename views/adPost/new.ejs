<% include ../partials/header %>
<style>@media only screen and (max-width:700px){#selli{margin:7%}}@media only screen and (max-width:700px){#priy{margin:1%;width:100px}}@media only screen and (max-width:700px){#sale{width:20px}}@media only screen and (min-width:1200px){#selli{margin:70px 20%}}</style>
<div id="selli" style="width:auto" class="container jumbotron">
<form class="container" action="/adPost" method="POST" enctype="multipart/form-data">
<div style="margin-top:40px" class="form-group display-5">
DETAILS OF YOUR AD
</div>
<div class="form-group">
<label required for="adTitle">Ad Title*</label>
<input type="text" name="adTitle" class="form-control" id="adTitle">
</div>
<hr>
<div class="form-group">
<label for="adTitle">CATEGORY*</label>
<input type="text" name="category" value=<%= cat %>&#160; &nbsp;>
</div>
<hr>
<div class="required field">
</div>
<div class="form-group">
<label for="exampleFormControlTextarea1">Description *</label>
<textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="5" required></textarea>
</div>
<hr>
<div style="margin-left:20px;margin-bottom:20px" class="form-group">
</div>
<div class="form-group">
<label for="address">ENTER YOUR PICK ADRRESS *</label>
<div class="row">
<div class="col">
<div class="scrollable required field">
<label for="block"><h5>Hostel/Academic Block</h5></label>
<select id="block" class="form-control" name="block" placeholder="Block-HOSTEL/ACADEMIC">
<option value="A-BLOCK(MH)" selected>A Block Men's</option>
<option value="B-BLOCK(MH)">B Block Men's</option>
<option value="C-BLOCK(MH)">C Block Men's</option>
<option value="D-BLOCK(MH)">D Block Men's</option>
<option value="E-BLOCK(MH)">E Block Men's</option>
<option value="F-BLOCK(MH)">F Block Men's</option>
<option value="G-BLOCK(MH)">G Block Men's</option>
<option value="H-BLOCK(MH)">H Block Men's</option>
<option value="J-BLOCK(MH)">J Block Men's</option>
<option value="K-BLOCK(MH)">K Block Men's</option>
<option value="L-BLOCK(MH)">L Block Men's</option>
<option value="M-BLOCK(MH)">M Block Men's</option>
<option value="N-BLOCK(MH)">N Block Men's</option>
<option value="P-BLOCK(MH)">P Block Men's</option>
<option value="Q-BLOCK(MH)">Q Block Men's</option>
<option value="R-BLOCK(MH)">R Block Men's</option>
<option value="A-BLOCK(LH)">A Block Women's</option>
<option value="B-BLOCK(LH)">B Block Women's</option>
<option value="C-BLOCK(LH)">C Block Women's</option>
<option value="D-BLOCK(LH)">D Block Women's</option>
<option value="E-BLOCK(LH)">E Block Women's</option>
<option value="F-BLOCK(LH)">F Block Women's</option>
<option value="Technoly Tower">Technology Tower</option>
<option value="Silver Jubliee Tower">Silver Jubliee Tower</option>
<option value="MAIN GATE">Main Gate</option>
<option value="SMV">SMV</option>
</select>
</div>
</div>
<br>
<div>
<div class="col">
<label for="room"><h5>Room NO:</h5> </label>
<input id="room" type="text" class="form-control" name="room" placeholder="Room NO:(optional)">
</div>
</div>
</div>
</div>
<div id="priy" sytle="margn-left:500px;" class="form-group">
<label for="PRICE" class="display-5">SET A PRICE(SALE OR RENT)</label>
<hr>
<div class="row">
<div id="sale" class="col ui left action input">
<a class="ui teal labeled icon button">
<i class="cart icon"></i>
PRICE(INR)
</a>
<input name="price1" type="number" placeholder="enter price " min="1" step="1">
</div>
</div>
</div>
<hr>
<div class="form-group">
<label for="phone">Phone No *</label>
<input type="text" pattern="[6-9]{1}[0-9]{9}"class="form-control" placeholder="phone Number" name="ph" id="phone" required>
</div>
<label required for="photos">Photos </label>
<div style="margin:0 60px 0 60px" class="form-group">
<div class="row">
<h5>
Add front image*
</h5>
<div style="margin-bottom:50px" class="custom-file">
<input type="file" name="img1" id="image" accept="image/*" class="custom-file-input" id="customFile">
<label class="custom-file-label" for="customFile">Choose Image file</label>
</div>
</div>
</div>
<hr>
<div class="form-group">
<button style="padding:auto 600px" class="btn btn-lg btn-success" class="form-control">POST</button>
</div>
</form>
</div>
<% include ../partials/footer %>